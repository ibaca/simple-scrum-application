<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.inftel.ssa.mobile"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="4"
        android:targetSdkVersion="11" />
    
    <!-- Permission for internet access -->
    <uses-permission android:name="android.permission.INTERNET" />
    
    <!-- Permission for check internet access -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="SsaApplication"
        android:label="@string/app_name" >
        <activity
            android:name=".ui.SsaActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.ProjectActivity" />
        <provider android:authorities="org.inftel.ssa.mobile.contentproviders.projects" 
            android:name=".contentproviders.ProjectContentProvider"></provider>
        <provider android:name=".contentproviders.UserContentProvider" 
            android:authorities="org.inftel.ssa.mobile.contentproviders.users"></provider>
        <activity android:name=".ui.fragments.UserListFragment"></activity>
        <activity android:name=".ui.fragments.UserDetailFragment"></activity>    
    </application>

</manifest>